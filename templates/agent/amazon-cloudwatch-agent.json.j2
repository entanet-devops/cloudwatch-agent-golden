{
    "agent": {
        "metrics_collection_interval": 60,
        "logfile": "{{ cwa_agent_log_file }}",
        "debug": false
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/var/log/syslog",
                        "log_group_name": "/aws/ec2/{local_hostname}",
                        "log_stream_name": "/var/log/syslog",
                        "retention_in_days": {{ cwa_retention_in_days }}
                    }
                ]
            }
        }
    }
}
